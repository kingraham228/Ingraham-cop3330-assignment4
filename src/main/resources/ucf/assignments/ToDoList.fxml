<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.FXController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem fx:id="mImportList" mnemonicParsing="false" text="Import a List" />
                  <MenuItem fx:id="mImportAll" mnemonicParsing="false" text="Import Multiple Lists" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="mSaveList" mnemonicParsing="false" text="Save List" />
                  <MenuItem fx:id="mSaveAll" mnemonicParsing="false" text="Save All Lists" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
                  <MenuItem fx:id="mEditListTitle" mnemonicParsing="false" text="Edit List Title" />
                  <MenuItem fx:id="mEditItem" mnemonicParsing="false" text="Edit Item" />
                  <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="mDeleteList" mnemonicParsing="false" text="Delete List" />
                  <MenuItem fx:id="mDeleteItem" mnemonicParsing="false" text="Delete Item" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="Filter">
              <items>
                  <CheckMenuItem fx:id="mUncomplete" mnemonicParsing="false" text="Uncompleted Items" />
                  <CheckMenuItem fx:id="mComplete" mnemonicParsing="false" text="Completed Items" />
              </items>
            </Menu>
      </menus>
    </MenuBar>
      <GridPane prefHeight="377.0" prefWidth="640.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="111.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="71.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="437.0" minWidth="10.0" prefWidth="212.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="437.0" minWidth="10.0" prefWidth="153.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="437.0" minWidth="10.0" prefWidth="95.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="183.0" minHeight="2.0" prefHeight="28.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="339.0" minHeight="10.0" prefHeight="301.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="339.0" minHeight="10.0" prefHeight="47.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="yourLists" contentDisplay="CENTER" text="Your To Do Lists" textAlignment="CENTER" GridPane.columnSpan="2">
               <GridPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </GridPane.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <ListView fx:id="lists" editable="true" GridPane.columnSpan="2" GridPane.rowIndex="1">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <GridPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </GridPane.margin>
            </ListView>
            <TableView fx:id="items" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.columnSpan="3" GridPane.rowIndex="1">
              <columns>
                <TableColumn fx:id="cDescription" maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Description" />
                <TableColumn fx:id="cDueDate" maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Due Date" />
                  <TableColumn fx:id="cStatus" maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Status" />
              </columns>
               <GridPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </GridPane.margin>
            </TableView>
            <TextField fx:id="tfNewList" promptText="New List Name" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </GridPane.margin>
            </TextField>
            <Button fx:id="bNewList" mnemonicParsing="false" text="New List" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="tfAddItemDesc" promptText="Item Description" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets left="16.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="tfDueDate" promptText="Due Date YYYY-MM-DD" GridPane.columnIndex="3" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets left="8.0" />
               </GridPane.margin>
            </TextField>
            <Button fx:id="bAddItem" alignment="CENTER_RIGHT" mnemonicParsing="false" text="Add Item" GridPane.columnIndex="4" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets left="8.0" />
               </GridPane.margin>
            </Button>
            <Button fx:id="bMarkDone" mnemonicParsing="false" text="Mark Done" GridPane.columnIndex="4">
               <GridPane.margin>
                  <Insets left="8.0" right="8.0" top="8.0" />
               </GridPane.margin>
            </Button>
         </children>
      </GridPane>
  </children>
</VBox>
